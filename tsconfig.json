{
  "include": ["src"],
  "compilerOptions": {
    "noEmit": true,
    "target": "es2017",
    "module": "nodenext",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false, // FIXME remove this
    "skipLibCheck": true
  }
}
